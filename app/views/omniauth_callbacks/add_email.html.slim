.row
  .col-lg-6
    h1 Add email information

    = render 'shared/errors', item: @user

    = form_tag register_path, method: :post do
      .form-group
        = label_tag 'Email'
        = text_field_tag 'auth_hash[info][email]', @user.email, placeholder: :email, class: 'form-control'

      p= submit_tag 'Add', class: 'btn btn-primary'
